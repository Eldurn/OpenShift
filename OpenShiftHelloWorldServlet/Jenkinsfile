node {
    stage('Build') {
    	steps {
	         echo 'Building....'
	         echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
	         openshiftScale apiURL: '', authToken: '', depCfg: 'jws-app', namespace: '', replicaCount: '0', verbose: 'false', verifyReplicaCount: 'false', waitTime: ''
	         openshiftBuild(buildConfig: 'jws-app', showBuildLogs: 'true')
         }
    }
    stage('Test') {
        echo 'Testing....'
    }
    stage('Deploy') {
    	steps {
    		openshiftDeploy(deploymentConfig: 'jws-app')
        	echo 'Deploying....'
        }
    }
}