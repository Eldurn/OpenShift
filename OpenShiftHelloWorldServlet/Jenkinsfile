node('maven') {
    stage('Build') {
         echo 'Building....'
         
         
    }
    stage('Test') {
        echo 'Testing....'
        
        sh "mvn -f /var/lib/jenkins/jobs/testaus-sample-pipeline/workspace/pom.xml test"
    }
    stage('Deploy') {
   	    echo 'Deploying....'
		openshiftDeploy depCfg: 'jws-app', verbose: 'false', waitTime: ''
		openshiftScale depCfg: 'jws-app', replicaCount: '1', verbose: 'false', verifyReplicaCount: 'true'
    } 
}